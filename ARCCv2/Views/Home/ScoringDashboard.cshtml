<div class="row">
    <div class="col-lg-12">
        <h3 style="display: inline-block;">List of ARCC and Dee Proposals</h3>
    </div>

    @* Status Button Bar -------------------------------------- *@
    <div class="col-lg-8">
        <button class="weberButton" data-ng-click="goHome()">Home</button>
    </div>
    <div class="col-lg-4 pull-right">
        <button class="weberButton" data-ng-click="setSelection(1, 'Ready To Score');" ng-class="{'weberButtonGreen': model.selected == 1}">
            Ready To Score
        </button>
        <button class="weberButton" data-ng-click="setSelection(2, 'All Active');" ng-class="{'weberButtonGreen': model.selected == 2}">
            All Active
        </button>
        <button class="weberButton" data-ng-click="setSelection(3, 'All Archived');" ng-class="{'weberButtonGreen': model.selected == 3}">
            All Archived
        </button>
    </div>
</div>
<br /><br />

<div class="line-break"></div>
<div class="row">
    <div class="col-lg-2 pull-left">
        <div class="pull-left"><strong>{{model.status}}</strong></div>
    </div>
</div>
<br />

<table ng-table="tableParams" show-filter="true" class="table table-striped table-hover ng-table-responsive">
    <tr data-ng-repeat="proposal in $data">
        <td class="text-center" data-title="'Type'" sortable="'Type'" filter="{ 'Type': 'text' }" ng-click="viewDetail(proposal)">
            {{proposal.Type}}
        </td>
        <td class="text-center" data-title="'Proposal #'" sortable="'ProposalID'" filter="{ 'ProposalID': 'text' }" ng-click="viewDetail(proposal)">
            {{proposal.ProposalID}}
        </td>
        <td class="" data-title="'Proposal Name'" sortable="'ProposalName'" filter="{ 'ProposalName': 'text' }" ng-click="viewDetail(proposal)">
            {{proposal.ProposalName}}
        </td>
        <td class="text-center" data-title="'Last Updated Date'" sortable="'LastUpdatedDate'" filter="{ 'LastUpdatedDate': 'text' }" ng-click="viewDetail(proposal)">
            {{proposal.LastUpdatedDate | date: 'M/dd/yyyy' }}
        </td>
        <td class="text-center" data-title="'Status'" sortable="'Status'" filter="{ 'Status': 'text' }" ng-click="viewDetail(proposal)">
            {{proposal.Status}}
        </td>
    </tr>
</table>

