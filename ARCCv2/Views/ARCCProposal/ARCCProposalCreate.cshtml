<div class="form container" ng-form="form.NewPaymentChannel">
    <div class="page-header text-center">
        <h1>Academic Resources and Computing Committee</h1>
        <h1><small>Create a New Proposal</small></h1>
    </div>

        @*-- Top Panel --*@
        <div class="row">
            <div class="col-lg-6 form-group">
                <label for="ARCCName">*Proposal Title:</label>
                <input class="form-control" type="text" id="ARCCName" name="ARCCName" ng-model="" required />
                <label for="ARCCDirector">*Project Director:</label>
                <input class="form-control" type="text" id="ARCCDirector" name="ARCCDirector" ng-model="" required />
                <label for="ARCCDepartment">*Department:</label>
                <input class="form-control" type="text" id="ARCCDepartment" name="ARCCDepartment" ng-model="" required />
            </div>
            <div class="col-lg-6 form-group">
                <label for="ARCCCollege">*College:</label>
                <input class="form-control" type="text" id="ARCCCollege" name="ARCCCollege" ng-model="" required />
                <label for="ARCCEmail">*E-Mail:</label>
                <input class="form-control" type="text" id="ARCCEmail" name="ARCCEmail" ng-model="" required />
                <label for="ARCCExtension">Extension:</label>
                <input class="form-control" type="text" id="ARCCExtension" name="ARCCExtension" ng-model="" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <label for="ARCCOtherMembers">Other Team Members:</label>
                <input class="form-control" type="text" id="ARCCOtherMembers" name="ARCCOtherMembers" ng-model="" />
            </div>
        </div>

